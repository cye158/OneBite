<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ironsquishy.biteclub.CurrentLocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/askCurrentLocationText"
        android:text="Enter starting location"
        android:layout_above="@+id/currentAddress"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/currentAddress"
        android:autoText="false"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/askCurrentLocationText"
        android:layout_alignEnd="@+id/askCurrentLocationText"
        android:layout_gravity="center" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/next_button_msg"
        android:id="@+id/nextButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/currentAddress"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
