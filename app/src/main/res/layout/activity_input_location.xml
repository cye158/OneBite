<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ironsquishy.biteclub.InputLocationActivity"
    android:background="#4CAF50">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/askCurrentLocationText"
        android:layout_margin="16dp"
        android:text="Enter starting location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/currentAddress"
        android:autoText="false"
        android:layout_gravity="center"
        android:layout_below="@+id/askCurrentLocationText"
        android:layout_alignLeft="@+id/askCurrentLocationText"
        android:layout_alignStart="@+id/askCurrentLocationText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/enterButton"
            android:layout_gravity="center_horizontal"
            android:background="#FF5722"
            android:layout_below="@+id/currentAddress"
            android:layout_centerHorizontal="true" />

</RelativeLayout>
