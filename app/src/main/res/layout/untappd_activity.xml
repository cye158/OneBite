<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.ironsquishy.biteclub.UntappdFragment"
    android:background="#330033">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/UntappdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transportation_header"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="15sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/YelpImage"
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/untappdyellow" />

        <View
            android:id="@+id/boarderLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/YelpImage"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Beer Name Goes here"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/resultText" />

        <LinearLayout
            android:id="@+id/YelpInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/resultText">


            <TextView
                android:id="@+id/YelpInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/YelpInfoHeader"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Beer of the Day!"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/boarderLine"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check out Comments"
        android:id="@+id/untappdButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="toUntappdList" />

</FrameLayout>
