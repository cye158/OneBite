<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    tools:context="com.ironsquishy.biteclub.UntappdFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/UntappdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="15sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/UntappdHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/UntappdHeaderImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/YelpImage"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/untappdyellow"
                        android:onClick="onClickImage" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/UntappdHeaderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/UntappdHeaderImage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/YelpImage"
                        android:text="Beer Name Goes here"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BeerRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/resultText"
                        android:layout_marginTop="15dp"
                        android:text="ratings here" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/HeaderBoarderLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/UntappdHeader"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/BeerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HeaderBoarderLine"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/BeerStylelayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/BeerStyleHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Style:   "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BeerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/BeerStyleHeader"
                        android:text="Style" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/BeerNumberOfReviewLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/BeerNumberOfReviewHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Number Reviews:   "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BeerNumberOfReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/BeerNumberOfReviewHeader"
                        android:text="Total Number Reviews" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/BeerInfoBoarder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/BeerInfo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/BeerDescriptionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BeerInfoBoarder"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/BeerDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:   "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BeerDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Description" />

            </LinearLayout>

            <View
                android:id="@+id/BeerDescriptionBoarder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/BeerDescriptionLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/BeerReviewLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BeerDescriptionBoarder"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BeerReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review:   "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/ListViewBoarder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/BeerReviewLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/ListViewLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ListViewBoarder"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/untappdList"
                    android:layout_height="fill_parent"
                    android:layout_width="275dp"
                    android:divider="#78323333"
                    android:dividerHeight="1dp"
                    android:background="#00000000"
                    android:headerDividersEnabled="true" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</FrameLayout>
