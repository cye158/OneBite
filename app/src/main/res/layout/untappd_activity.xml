                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/BeerStyleHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Style:   "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/BeerStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/BeerStyleHeader"
                            android:text="Style" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/BeerNumberOfReviewLayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/BeerNumberOfReviewHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Number Reviews:   "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/BeerNumberOfReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/BeerNumberOfReviewHeader"
                            android:text="Total Number Reviews" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/BeerInfoBoarder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/BeerInfo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/BeerDescriptionLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BeerInfoBoarder"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/BeerDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:   "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ScrollView
                        android:id="@+id/UntappdDescriptionScroll"
                        android:layout_width="fill_parent"
                        android:layout_height="75dp"
                        android:layout_below="@id/BeerDescription"
                        android:layout_marginTop="0dp"
                        android:fillViewport="true"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/BeerDescriptionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:text="Description" />
                    </ScrollView>
                </LinearLayout>

                <View
                    android:id="@+id/BeerDescriptionBoarder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/BeerDescriptionLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/BeerReviewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/BeerDescriptionBoarder"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/BeerReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Review:   "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

