<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:background="#ff4a784e">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_margin="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:id="@+id/placeholder_yelp_image_id"
                        android:src="@drawable/placeholder_yelp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeholder_yelp_image_id"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/resultText"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkToAddFav"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#14A984"
                        android:textSize="15sp"
                        android:layout_below="@id/resultText"
                        android:textStyle="bold"
                        android:text="ADD TO FAVORITES"
                        android:onClick="checkFavAdd"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#14A984"
                        android:textSize="15sp"
                        android:layout_below="@id/resultText"
                        android:layout_toRightOf="@id/checkToAddFav"
                        android:textStyle="bold"
                        android:text="OPEN MAP"
                        android:onClick="toNavi"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="15dp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Untappd Feed"
                android:id="@+id/button2"
                android:background="@drawable/button_shadow"
                android:onClick="toInfo"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:id="@+id/filterButton"
                android:background="@drawable/button_shadow"
                android:onClick="toSearch"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:src="@drawable/navigation_fab"
                android:onClick="toNavigation"
                fab:fab_colorNormal="#ffd1652c"
                />

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>

